global:
  scrape_interval: 15s
  evaluation_interval: 15s

scrape_configs:
  - job_name: "litellm"
    metrics_path: /metrics
    static_configs:
      - targets: ["openclaw-litellm:4000"]
    scrape_interval: 30s

  - job_name: "redis"
    metrics_path: /metrics
    static_configs:
      - targets: ["openclaw-redis-exporter:9121"]
    scrape_interval: 60s
